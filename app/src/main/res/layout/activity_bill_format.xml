<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.greenbills.www.greenbills.BillFormat">


    <RelativeLayout
        android:id="@+id/BF_topLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/bill_blue">

        <TextView
            android:id="@+id/BF_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="Date : "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/BF_dateInput"
            android:layout_width="@dimen/BF_date_input"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/BF_date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/BF_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:text="Time : "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/BF_timeInput"
            android:layout_width="@dimen/BF_date_input"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/BF_time"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            android:textSize="12dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/BF_logoRetailer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/BF_topLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:background="#000000" />

    <ImageView
        android:id="@+id/BF_logoGB"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/BF_topLayout"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="#000000" />

    <TextView
        android:id="@+id/BF_retAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/BF_logoRetailer"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:text="Retailer Address"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/BF_retAddInput"
        android:layout_width="@dimen/BF_retAddInputWidth"
        android:layout_height="@dimen/BF_retAddinputHeight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/BF_retAdd"
        android:layout_marginLeft="10dp"
        android:background="@drawable/textview_round_box"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/BF_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/BF_logoRetailer"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:text="Smarter today for a Better tomorrow"
        android:textSize="11dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/BF_barCode"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/BF_retAddInput"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/BF_slogan"
        android:layout_marginRight="10dp"
        android:background="@drawable/textview_round_box"
        android:layout_marginTop="2dp" />

    <EditText
        android:id="@+id/BF_nameInput"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/BF_retAddInput"
        android:layout_below="@+id/BF_retAddInput"
        android:hint="Name : "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/BF_emailInput"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/BF_retAddInput"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/BF_addressInput"
        android:hint="Email : "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/BF_addressInput"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/BF_retAddInput"
        android:layout_below="@+id/BF_nameInput"
        android:background="@drawable/textview_round_box"
        android:hint="Address : "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/BF_contactInput"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/BF_emailInput"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/BF_retAddInput"
        android:hint="Contact :  "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/BF_appliedCoupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/BF_contactInput"
        android:layout_alignStart="@+id/BF_contactInput"
        android:layout_below="@+id/BF_contactInput"
        android:text="Offer Code Applied : "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/BF_appliedCouponInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/BF_contactInput"
        android:layout_toRightOf="@+id/BF_appliedCoupon"
        android:text="Null"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/BF_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/BF_addressInput"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Coupon Code Applied : "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/BF_CouponInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/BF_coupon"
        android:layout_below="@+id/BF_addressInput"
        android:layout_toRightOf="@+id/BF_coupon"
        android:text="Null"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <RelativeLayout
        android:id="@+id/BF_billLayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/BF_coupon"
        android:layout_marginTop="10dp"
        android:background="@color/bill_blue">

        <TextView
            android:id="@+id/BF_bill_slno"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:padding="5dp"
            android:text="SlNo"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/BF_bill_prodName"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/BF_bill_prodQty"
            android:layout_toRightOf="@+id/BF_bill_slno"
            android:gravity="center_vertical|center_horizontal"
            android:padding="5dp"
            android:text="Product Name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/BF_bill_prodQty"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/BF_bill_prodCost"
            android:gravity="center_vertical|center_horizontal"
            android:text="Qty"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/BF_bill_prodCost"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/BF_bill_prodAmount"
            android:gravity="center_vertical|center_horizontal"
            android:text="Cost"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/BF_bill_prodAmount"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:text="Amount"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/White" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/BF_billLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/BF_billLayoutHeader"
        android:background="@drawable/textview_round_box_blue">

        <include layout="@layout/bill_content" />
    </ScrollView>

    <TextView
        android:id="@+id/BF_paymentMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/BF_billLayout"
        android:text="Payment Method : "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Black" />

    <TextView
        android:id="@+id/BF_paymentMethodInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/BF_paymentMethod"
        android:layout_below="@+id/BF_billLayout"
        android:layout_toRightOf="@id/BF_paymentMethod"
        android:text="CASH"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/bill_blue" />

    <TextView
        android:id="@+id/BF_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/BF_paymentMethod"
        android:layout_below="@+id/BF_billLayout"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/BF_paymentMethodInfo"
        android:text="Total :     Rs  "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Black" />

    <TextView
        android:id="@+id/BF_paymentTotalInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/BF_total"
        android:layout_below="@+id/BF_billLayout"
        android:layout_toRightOf="@+id/BF_total"
        android:text="55580"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Black" />

    <TextView
        android:id="@+id/BF_bankDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/BF_paymentMethod"
        android:text="Banking Details : "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Black" />

    <RelativeLayout
        android:id="@+id/BF_bankDetailsInput"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/BF_bankDetails"
        android:background="@drawable/textview_round_box"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Black">

        <TextView
            android:id="@+id/BF_bank_cardNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Card No. : "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/Black"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/BF_bank_cardNoInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/BF_bank_cardNo"
            android:layout_alignTop="@+id/BF_bank_cardNo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/Black"
            android:layout_marginLeft="2dp"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/BF_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BF_bank_cardNo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Bank : "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/Black"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/BF_bank_nameInput"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/BF_bank_name"
            android:layout_alignTop="@+id/BF_bank_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/Black"
            android:layout_marginLeft="2dp"
            android:textSize="12dp"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/BF_QRCode"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/BF_total"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/BF_total"
        android:background="#000000" />

    <RelativeLayout
        android:id="@+id/BF_bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:background="@color/bill_blue">


        <TextView
            android:id="@+id/BF_lowerLayoutHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="Congratulations on Your purchase! Do come again."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/White" />
    </RelativeLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:id="@+id/BF_doneButton"
        android:layout_below="@+id/BF_QRCode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>