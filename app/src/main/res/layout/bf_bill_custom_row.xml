<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#c7ddfb">

    <TextView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1"
        android:textColor="@color/Black"
        android:id="@+id/BF_bill_slno"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:padding="5dp"  />

    <TextView
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Salua ka Stuff :3"
        android:id="@+id/BF_bill_prodName"
        android:layout_toRightOf="@+id/BF_bill_slno"
        android:layout_toLeftOf="@+id/BF_bill_prodQty"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/Black"
        android:padding="5dp" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="3"
        android:id="@+id/BF_bill_prodQty"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center"
        android:textColor="@color/Black"
        android:layout_toLeftOf="@+id/BF_bill_prodCost" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="130"
        android:id="@+id/BF_bill_prodCost"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/Black"
        android:layout_gravity="center"
        android:layout_toLeftOf="@+id/BF_bill_prodAmount"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="360"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/Black"
        android:layout_gravity="center"
        android:id="@+id/BF_bill_prodAmount" />
</RelativeLayout>